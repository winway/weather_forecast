<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreActivity">

    <RelativeLayout
        android:id="@+id/more_top_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F5F5F5">

        <ImageView
            android:id="@+id/more_top_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/more_top_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="更多设置"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/more_horizontal_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_top_rl"
        android:background="#DCDCDC" />

    <TextView
        android:id="@+id/more_set_wall_paper_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_horizontal_line1"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="改变壁纸"
        android:textSize="18sp"
        app:drawableStartCompat="@mipmap/more_bg" />

    <View
        android:id="@+id/more_horizontal_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_set_wall_paper_tv"
        android:background="#DCDCDC" />

    <RadioGroup
        android:id="@+id/more_select_wall_paper_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_horizontal_line2"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/more_select_wall_paper_green_rb"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#C5EDD1"
            android:button="@null"
            android:gravity="center"
            android:text="青瓦白墙"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/more_select_wall_paper_ping_rb"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#FCAFAE"
            android:button="@null"
            android:gravity="center"
            android:text="粉妆玉砌"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/more_select_wall_paper_blue_rb"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#87CEEB"
            android:button="@null"
            android:gravity="center"
            android:text="蓝色梦想"
            android:textStyle="bold" />

    </RadioGroup>

    <TextView
        android:id="@+id/more_version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_select_wall_paper_rg"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="当前版本"
        android:textSize="18sp"
        app:drawableStartCompat="@mipmap/more_version" />

    <View
        android:id="@+id/more_horizontal_line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_version_tv"
        android:background="#DCDCDC" />

    <TextView
        android:id="@+id/more_clear_cache_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_horizontal_line3"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="清除缓存"
        android:textSize="18sp"
        app:drawableStartCompat="@mipmap/more_cache" />

    <View
        android:id="@+id/more_horizontal_line4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_clear_cache_tv"
        android:background="#DCDCDC" />

    <TextView
        android:id="@+id/more_share_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_horizontal_line4"
        android:drawablePadding="20dp"
        android:padding="10dp"
        android:text="分享软件"
        android:textSize="18sp"
        app:drawableStartCompat="@mipmap/more_share" />

</RelativeLayout>