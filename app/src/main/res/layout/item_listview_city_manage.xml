<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/lvitem_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lvitem_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="西安" />

            <TextView
                android:id="@+id/lvitem_temp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="40sp"
                tools:text="12℃" />

            <View
                android:id="@+id/lvitem_horizontal_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/lvitem_temp_tv"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#808A87" />

            <TextView
                android:id="@+id/lvitem_cond_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lvitem_horizontal_line"
                android:textSize="16sp"
                tools:text="天气：晴" />

            <TextView
                android:id="@+id/lvitem_vertical_line"
                android:layout_width="2dp"
                android:layout_height="20dp"
                android:layout_below="@id/lvitem_horizontal_line"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@id/lvitem_cond_tv"
                android:background="#808A87" />

            <TextView
                android:id="@+id/lvitem_wind_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lvitem_horizontal_line"
                android:layout_toEndOf="@id/lvitem_vertical_line"
                android:textSize="16sp"
                tools:text="西南风2级" />

            <TextView
                android:id="@+id/lvitem_temprange_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lvitem_horizontal_line"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:textSize="16sp"
                tools:text="16~9℃" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>